<div class="container mx-auto">
  <%# button back to products %>
  <div class="flex items-center mt-10">
    <%= link_to products_path, class: "flex gap-3" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      <span>Back to products</span>
    <% end %>
  </div>

  <div class="grid w-full grid-cols-1 gap-10 p-1 my-36 lg:grid-cols-2">
    <%= image_tag(@product.link, class: "w-full rounded-md shadow border h-64 object-fit object-cover") %>

    <div class="grid grid-cols-1 gap-4">
      <p class="text-3xl font-semibold">
        <%= @product.name %>
      </p>

      <p>
        <%= @product.description %>
      </p>

      <p>
        Price: <%= number_to_currency(@product.price, unit: "â‚´ ") %>
      </p>

      <p>
        Available: <%= @product.balance %>
      </p>

      <div class="relative mb-3">
        <% if @product.balance.nonzero? %>
          <%= render "cart/buy_form", product: @product %>
        <% else %>
          <p class="mt-3 text-3xl text-grey-400">Out of stock</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
