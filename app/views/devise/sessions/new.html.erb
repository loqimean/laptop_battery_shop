<div class="flex justify-center items-center">
  <div class="text-center w-1/5 text-xl">
    <p class="py-5 text-2xl">Log in</p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: {
                                                                                          input_html: { class: 'input-field' },
                                                                                          label_html: { class: "text-xl" },
                                                                                          hint_html: {class: "text-sm text-neutral-500" }
                                                                                          } ) do |f| %>
      <%= f.input :email, input_html: { autocomplete: "email" } %>
      <%= f.input :password, input_html: { autocomplete: "current-password" } %>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-black" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
